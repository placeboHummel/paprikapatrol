.hero-body
  .container.has-text-centered
    .columns.is-vcentered
      .column.is-5
        %figure.image.is-4by3
          = image_tag @recipe.main_image if @recipe.main_image.attached?
      .column.is-6.is-offset-1
        %h4.title.is-5= @recipe.title
        .box
          %p.has-text-centered= @recipe.description