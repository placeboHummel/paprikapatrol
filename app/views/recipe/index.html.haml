.container
  = search_form_for @q, url: recipe_index_path do |f|
    .field.has-addons
      .control.has-icons-left.is-expanded
        = f.search_field :title_cont, class: "input", placeholder: "Suche"
        %span.icon.is-left
          %i.fa.fa-search
      .control
      %a.button.alignright{:href => "/new"}
        = image_tag "add_recipe.png", size: "30x30"
%br
%table.table.is-fullwidth
  %thead
    %tr
  %tbody
  - @recipe.each do |recipe|
    %tr
      %td= image_tag recipe.main_image.variant(resize_to_limit: [150, 150]) if recipe.main_image.attached?
      %td
        %a{:href => "/#{recipe.id}/", :class => "has-text-dark"}
          %p= recipe.title
        %td= link_to "#{fa_icon "pencil"}".html_safe, edit_recipe_path(recipe)
        %td= link_to "#{fa_icon "trash"}".html_safe, recipe_delete_path(recipe), method: :delete, class: "", data: { confirm: "Willst du '#{recipe.title}' wirklich l√∂schen?" }
