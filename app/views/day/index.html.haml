.title.is-4 Montag
.box
  %article.media
    .media-left
      %figure.image.is-64x64
        %img= image_tag "lunch-bag.png"
    .media-content
      .content
        .title.is-5= Recipe.find_by(id: @momittag.recipe_id).title if Recipe.find_by(id: @momittag.recipe_id).present?
      %nav.level.is-mobile
        .level-left
          %a.level-item{:href => "/day/#{@momittag.id}/edit"}
            = fa_icon "pencil-square-o"
          | ⠀
          %a.level-item{:href => "/#{@momittag.recipe_id}/"}
            = fa_icon "cutlery", text: "⠀Zum Rezept"
