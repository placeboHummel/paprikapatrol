%link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}

%nav.navbar
  .navbar-brand
    = link_to "PAprika PAtrol", root_path, class: "mobile-header", id: "title logo"
    .navbar-burger.burger{"data-target" => "navbarExampleTransparentExample"}
      %span
      %span
      %span
  #navbarExampleTransparentExample.navbar-menu
    .navbar-start
    .navbar-end
      .navbar-item.has-dropdown.is-hoverable
        = link_to "Home", root_path, class: "navbar-link"
        .navbar-dropdown.is-boxed
          = link_to '<i class="fa fa-book"></i>‚†ÄAlle Rezepte'.html_safe, recipe_index_path, class: "navbar-item"
          = link_to '<i class="fa fa-calendar-alt"></i>‚†ÄWochenplan'.html_safe, day_index_path, class: "navbar-item"
          - if !user_signed_in?
            = link_to '<i class="fas fa-sign-in-alt"></i>‚†ÄLogin'.html_safe, new_user_session_path, class: "navbar-item"
          - if user_signed_in?
            = link_to '<i class="fa fa-plus"></i>‚†ÄNeues Rezept'.html_safe, recipe_new_path, class: "navbar-item"
          - if !@q.blank?
            %hr
            = search_form_for @q, url: root_path do |f|
              .control.navbar-item
                = f.search_field :title_or_action_text_rich_text_body_cont, class: "input", placeholder: "üîç Suche"