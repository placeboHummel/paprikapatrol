  .navbar-brand
    = link_to "PAprika PAtrol", root_path, class: "mobile-header", id: "title logo"
    %a.navbar-burger.burger{"data-target" => "navbarExampleTransparentExample"}
      %span{"aria-hidden" => "true"}
      %span{"aria-hidden" => "true"}
      %span{"aria-hidden" => "true"}
  #navbarExampleTransparentExample.navbar-menu
    .navbar-start
      ⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
      = link_to '<i class="fa fa-home"></i>⠀Home'.html_safe, root_path, class: "navbar-item #{'is-current' if current_page?(root_path)}"
      = link_to '<i class="fa fa-calendar-alt"></i>⠀Wochenplan'.html_safe, day_index_path, class: "navbar-item #{'is-current' if current_page?(day_index_path)}"
      ⠀⠀⠀
      = search_form_for @q, url: root_path do |f|
        .navbar-item
          = f.search_field :title_or_action_text_rich_text_body_cont, class: "input", placeholder: "Suchen.."

    .navbar-end
      = link_to '<i class="fas fa-user-circle"></i>⠀Admin'.html_safe, admin_path, class: "navbar-item #{'is-current' if current_page?(recipe_new_path)}"
    - if cookies[:moon]
      = link_to '<i class="fas fa-sun"></i>⠀Light Mode'.html_safe, sun_path, class: "navbar-item"
    - else
      = link_to '<i class="fas fa-moon"></i>⠀Dark Mode'.html_safe, moon_path, class: "navbar-item"