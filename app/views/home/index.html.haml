.field
  = search_form_for @q, url: root_path do |f|
    .control
      = f.search_field :title_cont, class: "input", placeholder: "Suche nach einem Rezept.."

- @recipe.each_slice(2) do |recipes|
  .columns
    - recipes.each do |recipe|
      .column
        .card
          .card-image
            %figure.image
              %a{:href => "/#{recipe.id}"}
                = image_tag recipe.main_image.variant(resize_to_limit: [550, 550]) if recipe.main_image.attached?
          .card-content
            %a{:href => "/#{recipe.id}"}
              %p.title.is-5= recipe.title

.flickr_pagination= will_paginate @recipe, previous_label: "«", next_label: "»"