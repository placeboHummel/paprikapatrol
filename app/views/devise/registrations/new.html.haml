%h1.title= t('.sign_up')

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = bulma_devise_error_messages!
  
  .field
    = f.label :email, class: 'label'
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input'
  
  .field
    = f.label :password, class: 'label'
    = f.password_field :password, autocomplete: 'current-password', class: 'input'
    - if @minimum_password_length
      %p.help.has-text-dark= t('devise.shared.minimum_password_length', count: @minimum_password_length)
  
  .field
    = f.label :password_confirmation, class: 'label'
    = f.password_field :password_confirmation, autocomplete: 'current-password', class: 'input'
  
  .field
    = f.submit t('.sign_up'), class: 'button is-primary'

= render 'devise/shared/links'
